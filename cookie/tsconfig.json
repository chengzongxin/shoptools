{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "jsx": "react"
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.html"
  ],
  "exclude": [
    "node_modules"
  ]
} 